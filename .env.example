# Ambiente
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_APP=run.py

# Configuração do banco de dados (usado pela aplicação)
# Exemplo para uso com docker-compose: postgres rodando no serviço "db"
DATABASE_URL=postgresql://books_user:books_pass@db:5432/books_db

# Variáveis para criar/rodar o container Postgres (caso use docker-compose)
POSTGRES_USER=books_user
POSTGRES_PASSWORD=books_pass
POSTGRES_DB=books_db
PGDATA=/var/lib/postgresql/data/pgdata

# Segurança
# Substitua por valores fortes em produção (veja sugestão abaixo)
SECRET_KEY=python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=python -c "import secrets; print(secrets.token_urlsafe(32))"

# Opções de token (em segundos). Ex: 3600 = 1 hora
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000